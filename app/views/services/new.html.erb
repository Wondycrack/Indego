<div class="service-banner" style="background-image: linear-gradient(rgba(255,255,255,0.4),rgba(255,255,255,0.4)), url(https://freshome.com/wp-content/uploads/2017/07/contrast-living-room-1.jpg);">


<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>Add a service</h1>

      <%= simple_form_for (@service) do |f| %>
        <%= f.input :description %>
        <%= f.input :rate %>
        <%= f.input :speciality %>
        <%= f.input :project_type %>
        <%= f.submit "Add service"%>
      <% end %>
    </div>
  </div>
</div>






